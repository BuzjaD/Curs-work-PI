<div class="form_container">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="ps_form_container">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="ps_form_title">Login</div>
            <div  class="ps_form_input_wrapper">
                <label asp-for="Email" class="ps_form_label">Email:</label>
                <input type="text" asp-for="Email" class="ps_form_input" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="ps_form_label">Password:</label>
                <input asp-for="Password" class="ps_form_input"/>
                <span asp-validation-for="Password"></span>
            </div>
                <input type="submit" value="Login" class="ps_form_button"/>
           
    </form>
</div>